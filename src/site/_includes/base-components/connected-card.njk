<li class="base-card card">
  <div class="base-card__content">
    <h2><a href="#" aria-describedby="{{ card.heading | slug }}">{{ card.heading }}</a></h2>

    <p>{{ card.text }}</p>

    <div class="cluster">
      <div>  
        {% for label in card.cluster_labels %}
        <div class="card__tag">{{ label }}</div>
        {% endfor %}
      </div>
    </div>
    
    <footer class="stack">
      {% if card.tag_label %}
      <div class="nrgi-impact-tag">
        <div class="nrgi-impact-tag__tag"><span>NRGI</span><span>Impact</span></div>
        <p>{{ card.tag_label }}</p>
      </div>
      {% endif %}
    </footer>
  </div>
</li>

