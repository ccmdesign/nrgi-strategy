<li class="base-card card {{ card.class | d('') }}">
  <div class="base-card__content">
    <h2>
      {% if card.button %}
      <a data-a11y-dialog-show="{{ card.modal_id }}" aria-describedby="{{ card.heading | slug }}">{{ card.heading }}</a>
      {% else %}
      <a target="_blank" href="{{ card.tag.link }}" aria-describedby="{{ card.heading | slug }}">{{ card.heading }}</a>
      {% endif %}
    </h2>

    <p>{{ card.text }}</p>
    
    <footer class="stack">
      {% if card.tag %}
      <div class="nrgi-impact-tag">
        <div class="nrgi-impact-tag__tag"><span>NRGI</span><span>Impact</span></div>

        {% if card.tag.link %}
          <p><a target="_blank" href="{{ card.tag.link }}">{{ card.tag.label }}</a></p>
        {% else %}
          <p>{{ card.tag.label }}</p>
        {% endif %}

      </div>
      {% endif %}
      
      {% if card.button %}
      <button class="button {{ card.button.class | d('') }}" aria-hidden="true" id="{{ card.heading | slug }}" type="button" data-a11y-dialog-show="{{ card.modal_id }}">{{ card.button.label | d('Read More', true) }}</button>
      {% endif %}
    </footer>
  </div>
</li>
